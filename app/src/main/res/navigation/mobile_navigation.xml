    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_camera">

    <fragment
        android:id="@+id/nav_camera"
        android:name="com.example.qrcodescanner.ui.gallery.GalleryFragment"
        android:label="@string/menu_camera"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_barcode"
        android:name="com.example.qrcodescanner.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_barcode"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_qrcode"
        android:name="com.example.qrcodescanner.ui.home.HomeFragment"
        android:label="@string/menu_qrcode"
        tools:layout="@layout/fragment_qrcode" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.qrcodescanner.ui.settings.SettingsFragment"
        android:label="@string/menu_settings"
        tools:layout="@layout/fragment_settings" />
